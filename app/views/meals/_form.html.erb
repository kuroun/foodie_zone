<%= form_for @meal, :html => { :class => "form-horizontal meal" } do |f| %>

  <% if @meal.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@meal.errors.count, "error") %> prohibited this meal from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @meal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.hidden_field :restaurant_id, value: @meal.restaurant_id %>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurant_path(id: @meal.restaurant_id), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
